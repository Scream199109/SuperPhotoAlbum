<header class="header">
  <div class="herader__body">
    {{#if user}}
    <nav>
      <ul>
        <li class="drop">
          <div class="user-avatar">
            <img src="../../img/ste.png" />
          </div>
          <a href="#">{{user.email}}</a>
          <span aria-hidden="true" class="icon-reorder orange-txt"></span>
          <div class="triangle"></div>
          <div class="dropdownContain">
            <div class="dropOut">
              <ul>
                <li><span aria-hidden="true" class="icon-envelope-alt"></span><a href="/auth/logout">Галерея</a></li>
